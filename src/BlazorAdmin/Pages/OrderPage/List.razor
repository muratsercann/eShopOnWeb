@page "/orders"
@attribute [Authorize(Roles = BlazorShared.Authorization.Constants.Roles.ADMINISTRATORS)]
@inherits BlazorAdmin.Helpers.BlazorComponent
@namespace BlazorAdmin.Pages.OrderPage

<PageTitle>eShopOnWeb Admin: Manage Orders</PageTitle>

<h1>All Orders</h1>

@if (orders == null)
{
    <Spinner></Spinner>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Order Number</th>
                <th>Buyer Id</th>
                <th>Order Date</th>
                <th>Total Price</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="cursor-pointer">
            @foreach (var item in orders)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.BuyerId</td>
                    <td>@item.Date.Date.ToShortDateString()</td>
                    <td>$@item.Total</td>
                    <td>@item.Status</td>
                    <td>
                        <button @onclick="@(() => DetailsClick(item.Id))" @onclick:stopPropagation="true" class="btn btn-primary">
                            Details
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <Details @ref="DetailsComponent"></Details>
}